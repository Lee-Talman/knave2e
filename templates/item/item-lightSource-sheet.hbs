<form class="{{cssClass}}" autocomplete="off">
  {{! Item Sheet Header }}
  <header class="sheet-header">
    <div class="item-header-grid">

      {{! Item Image }}
      <div class="item-header-img">
        <img
          class="profile-img"
          src="{{item.img}}"
          data-edit="img"
          title="{{item.name}}"
        />
      </div>

      {{! Item Info }}
      <div class="item-info-grid">
        <div class="item-header-name">
          <input
            type="text"
            name="name"
            value="{{item.name}}"
            data-dtype="String"
          />
        </div>
        <div class="item-header-info">
          <div class="flexrow flex-group-center">
            <div class="flexrow flex-group-center">
              <div class="resource-label">{{localize "KNAVE2E.Slots"}}</div>
              <input
                type="text"
                name="system.slots"
                value="{{system.slots}}"
                data-dtype="Number"
              />
            </div>
            <div class="flexrow flex-group-center">
              <div class="resource-label">{{localize "KNAVE2E.Cost"}}</div>
              <input
                type="text"
                name="system.cost"
                value="{{system.cost}}"
                data-dtype="Number"
              />
            </div>
            <div class="flexrow flex-group-center">
              <div class="resource-label">{{localize "KNAVE2E.Relic"}}</div>
              <input
                type="checkbox"
                name="system.relic.isRelic"
                {{checked system.relic.isRelic}}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  {{! Item Sheet Body }}
  <section class="sheet-body">
    <div class="item-body-grid">

      {{! Item Aside }}
      <div class="item-body-aside">
        <div class="flexrow flex-group-left flex-between">
          <div class="resource-label aside">{{localize
              "KNAVE2E.DimRadius"
            }}</div>
          <input
            type="text"
            name="system.dimRadius"
            value="{{system.dimRadius}}"
            data-dtype="Number"
          />
        </div>
        <div class="flexrow flex-group-left flex-between">
          <div class="resource-label aside">{{localize
              "KNAVE2E.BrightRadius"
            }}</div>
          <input
            type="text"
            name="system.brightRadius"
            value="{{system.brightRadius}}"
            data-dtype="Number"
          />
        </div>
        <div class="flexrow flex-group-left flex-between">
          <div class="resource-label aside">{{localize
              "KNAVE2E.Intensity"
            }}</div>
          <input
            type="text"
            name="system.intensity"
            value="{{system.intensity}}"
            data-dtype="Number"
          />
        </div>
        <div class="flexrow flex-group-left flex-between">
          <div class="resource-label aside">{{localize "KNAVE2E.Speed"}}</div>
          <input
            type="text"
            name="system.speed"
            value="{{system.speed}}"
            data-dtype="Number"
          />
        </div>
      </div>

      {{! Item Description }}
      <div class="item-body-description">
        <div class="resource-label">{{localize "KNAVE2E.Description"}}</div>
        <section class="editor">
          {{editor
            system.enrichedHTML
            target="system.description"
            button=true
            owner=owner
            editable=editable
          }}
        </section>
      </div>
    </div>
  </section>
</form>